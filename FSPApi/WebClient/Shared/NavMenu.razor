@if (NavigationManager.Uri == "https://localhost:7228/")
{
    <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
        <nav class="flex-column">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="sport" Match="NavLinkMatch.All" @onclick="LoadSport">
                    <span class="oi oi-home" aria-hidden="true"></span> Спортсменам
