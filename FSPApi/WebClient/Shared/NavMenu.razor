@inject NavigationManager NavigationManager
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="s" @onclick="LoadStart">ФСП</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

@if (NavigationManager.Uri.Contains("sport"))
{
    <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
        <nav class="flex-column">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="sport" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Личный кабинет
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="sport/contestlist" Match="NavLinkMatch.All">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Рейтинговый список
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="sport/eventlist" Match="NavLinkMatch.All">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Список событий
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="sport/teamlist" Match="NavLinkMatch.All">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Список команд
                </NavLink>
            </div>
        </nav>
    </div>
}
